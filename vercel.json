{
  "installCommand": "npm install --workspaces",
  "buildCommand": "npm run build --workspace=web",
  "outputDirectory": "web/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" }
  ],
  "functions": {
    "api/index.js": {
      "runtime": "nodejs18.x",
      "includeFiles": "data/movies.db"
    }
  }
}
