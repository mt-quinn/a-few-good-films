{
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node", "config": { "includeFiles": ["data/movies.db"] } },
    { "src": "web/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/web/dist/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "/web/dist/index.html" }
  ]
}
